<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ProTherm Database</title>
    <link href="/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .tableFixHead {
            overflow-y: auto;
            height: 800px;
        }

            .tableFixHead thead th {
                position: sticky;
                top: 0;
            }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        th,
        td {
            padding: 8px 16px;
            border: 1px solid #ccc;
        }

        th {
            background: #eee;
        }
    </style>
</head>
<body>
    <div class="bg-dark text-white p-2">
        <span class="navbar-brand ml-2">ProTherm Database</span>
    </div>
    <div class="row m-1 p-1">
        <div id="categories" class="col-3">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            <a class="nav-link text-dark" asp-area="" asp-controller="Protherms" asp-action="Index">Search</a>
        </div>
        <div class="col-9">
        @RenderBody()
        </div>
    </div>
</body>
</html>
